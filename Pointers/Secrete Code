#include <iostream>
using namespace std;
int generateCode(int n) {
    if (n == 0) return 1; 
    int result = 1;
    for (int i = n; i >= 1; --i) {
        result *= i;
    }
    return result;
}

int main() {
    int (*codePtr)(int);       
    codePtr = generateCode;    

    int input;
    cout << "Enter a number: ";
    cin >> input;

    int secretCode = codePtr(input);

    cout << "Your secret code is: " << secretCode <<endl;

    return 0;
}
