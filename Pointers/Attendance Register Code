#include <iostream>
#include <cstdlib> 
using namespace std;

int main() {
    int numParticipants;

    cout << " Welcome to the  Attendance Register!" << endl;
    cout << " Please enter the number of participants: ";
    cin >> numParticipants;

    int* attendance = (int*)calloc(numParticipants, sizeof(int));

    if (attendance == NULL) { 
        cout << " Memory allocation failed. Exiting program..." << endl;
        return 1;
    }
    cout<<endl;
    cout << "ttendance list created. Everyone is absent (0) by default." << endl;

    int presentCount;
    cout<<endl;
    cout << " How many participants are present today? ";
    cin >> presentCount;

    cout << " Enter the participant numbers (from 1 to " << numParticipants << ") who are present:" << endl;
    for (int i = 0; i < presentCount; i++) {
        int p;
        cout << "   Participant number:  ";
        cin >> p;

        if (p >= 1 && p <= numParticipants) {
            attendance[p - 1] = 1; 
        } else {
            cout << " Invalid participant number! Skipping..." << endl;
        }
    }

    cout<<endl;
    cout << " Final Attendance List (1 = Present, 0 = Absent):" << endl;
   for (int i = 0; i < numParticipants; i++) {
    cout << "   Participant " << (i + 1) << " : ";
    
    if (attendance[i] == 1) {
        cout <<" Present";
    } else {
        cout << "Absent" ;
    }

    cout << endl;
}

    free(attendance);
    cout<<endl;
    cout << "Attendance register closed. Have a nice day!" << endl;
    return 0;
}
