#include <iostream>
#include <cstdlib>  
using namespace std;

int main() {
    int numPlayers;

    cout << "Welcome to the Custom Score Tracker " << endl;
    cout << "How many players are participating in the tournament? ";
    cin >> numPlayers;

    int* scores = (int*)malloc(numPlayers * sizeof(int));
    if (scores == NULL) {
        cout << "Memory allocation failed!" << endl;
        return 1; 
    }

    cout << endl;
    cout << "Please enter the scores for each player:" << endl;
    for (int i = 0; i < numPlayers; i++) {
        cout << " Enter score for Player " << (i + 1) << ": ";
        cin >> scores[i];
    }

    cout << endl;
    cout << "===== Tournament Scores =====" << endl;
    for (int i = 0; i < numPlayers; i++) {
        cout << "Player " << (i + 1) << " scored: " << scores[i] << endl;
    }

    free(scores);

    return 0;
}
    delete[] scores; 
   
    return 0;
}
