#include <iostream>
using namespace std;

int main() {
    int numPlayers;

    cout << "Welcome to the Custom Score Tracker "<<endl;
    cout << "How many players are participating in the tournament? ";
    cin >> numPlayers;

    int* scores = new int[numPlayers]; 
    cout<<endl;
    cout << "Please enter the scores for each player:";
    cout<<endl;
    for (int i = 0; i < numPlayers; i++) {
        cout << " Enter score for Player " << (i + 1) << ": ";
        cin >> scores[i];
    }
    cout<<endl;
    cout << "===== Tournament Scores =====";
    cout<<endl;
    for (int i = 0; i < numPlayers; i++) {
        cout << "Player " << (i + 1) << " scored: " << scores[i] << endl;
    }

    delete[] scores; 
   
    return 0;
}
